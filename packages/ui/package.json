{
  "name": "@kenshinx/ui",
  "version": "0.0.0-development",
  "description": "Personal React UI component library based on shadcn/ui patterns",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css",
    "./tailwind-preset": {
      "types": "./dist/tailwind-preset.d.ts",
      "import": "./dist/tailwind-preset.js",
      "require": "./dist/tailwind-preset.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && cp src/styles/tokens.css dist/styles.css",
    "dev": "tsup --watch",
    "lint": "eslint src/ && prettier --check src/",
    "lint:fix": "eslint src/ --fix && prettier --write src/",
    "format": "prettier --write src/",
    "test": "echo \"No tests yet\" && exit 0",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0",
    "lucide-react": "^0.469.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "tailwind",
    "shadcn"
  ],
  "author": "Mauro Cicerchia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MauroCicerchia/kenshinx-ui.git",
    "directory": "packages/ui"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
