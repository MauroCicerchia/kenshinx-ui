{
  "name": "kenshinx-ui",
  "version": "0.0.0",
  "private": true,
  "description": "Monorepo for @kenshinx/ui component library",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '@kenshinx/ui' build && bun run --filter '@kenshinx/playground' --filter '@kenshinx/storybook' build",
    "lint": "bun run --filter '*' lint",
    "test": "bun run --filter '*' test",
    "dev": "bun run --filter '*' dev",
    "prepare": "husky",
    "release": "bunx semantic-release",
    "release:dry-run": "bunx semantic-release --dry-run"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.0",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "husky": "^9.0.0",
    "semantic-release": "^24.0.0",
    "shadcn": "^3.7.0"
  },
  "keywords": [],
  "author": "Mauro Cicerchia",
  "license": "MIT"
}
